<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <RelativeLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <ImageView
            android:paddingLeft="10dp"
            android:id="@+id/ic_v"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_vibration_black"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_toRightOf="@+id/ic_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="25dp"
            android:paddingLeft="20dp"
            android:text="Vibration"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/vibration"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="200dp"
            android:layout_height="60dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <RelativeLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <ImageView
            android:paddingLeft="10dp"
            android:id="@+id/ic_n"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_notifications_black"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_toRightOf="@+id/ic_n"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="25dp"
            android:paddingLeft="20dp"
            android:text="Notification"/>

        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/notification"
            android:padding="10dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="200dp"
            android:layout_height="60dp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>


    <View
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <RelativeLayout
        android:id="@+id/privacy"
        android:background="@drawable/layout_click"
        android:clickable="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <ImageView
            android:paddingLeft="10dp"
            android:id="@+id/ic_lock"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_lock_outline_black"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_toRightOf="@+id/ic_lock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="25dp"
            android:paddingLeft="20dp"
            android:text="Privacy"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <RelativeLayout
        android:id="@+id/documentation"
        android:background="@drawable/layout_click"
        android:clickable="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <ImageView
            android:paddingLeft="10dp"
            android:id="@+id/ic_document"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_library_books_black"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_toRightOf="@+id/ic_document"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="25dp"
            android:paddingLeft="20dp"
            android:text="Documentation"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <RelativeLayout
        android:id="@+id/about_us"
        android:background="@drawable/layout_click"
        android:clickable="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <ImageView
            android:paddingLeft="10dp"
            android:id="@+id/ic_about"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_person_black"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_toRightOf="@+id/ic_about"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="25dp"
            android:paddingLeft="20dp"
            android:text="About Us"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <RelativeLayout
        android:id="@+id/feedback"
        android:background="@drawable/layout_click"
        android:clickable="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="60dp" >

        <ImageView
            android:paddingLeft="10dp"
            android:id="@+id/ic_feedback"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_mode_comment_black"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_toRightOf="@+id/ic_feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="25dp"
            android:paddingLeft="20dp"
            android:text="Feedback"/>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <Button

        android:id="@+id/btn_switch_account"
        android:layout_marginTop="20dp"
        android:layout_height="60dp"
        android:textSize="18dp"
        android:layout_gravity="center"
        android:layout_width="380dp"
        android:text="Switch Account"/>


</LinearLayout>